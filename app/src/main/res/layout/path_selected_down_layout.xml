<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            android:src="@drawable/tracker" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".9"
            android:gravity="center_vertical"
            android:text="Driver Accepted Your Request"
            android:textSize="20sp" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/transp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/provider_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"
                android:scaleX=".9"
                android:scaleY=".9"
                android:src="@drawable/ic_dummy_user" />

            <TextView
                android:id="@+id/driver_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".03"
                android:gravity="center"
                android:text="HN"
                android:textSize="18sp" />

            <RatingBar
                android:id="@+id/rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"

                android:layout_height="15dp"
                android:layout_gravity="center"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.1" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/car_image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".1"

                android:src="@drawable/ic_dummy_user" />

            <TextView
                android:id="@+id/car_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".03"
                android:gravity="center"
                android:text="Sedan"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meta_data"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".03"
                android:gravity="center|bottom"
                android:text="Chrysler 200"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/registration_number"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".03"
                android:gravity="center"
                android:text="3939TX"
                android:textSize="18sp" />


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"

            android:layout_marginLeft="@dimen/sides"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/sides"
            android:layout_marginBottom="10dp"
            android:layout_weight=".5"
            android:elevation="@dimen/toolbar_top">

            <TextView
                android:id="@+id/call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/call"
                android:background="@drawable/button_background"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"

            android:layout_marginLeft="@dimen/sides"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/sides"
            android:layout_marginBottom="10dp"
            android:layout_weight=".5"
            android:background="@color/back"
            android:elevation="@dimen/toolbar_top"
            app:cardBackgroundColor="@color/back">

            <TextView
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/cancel_ride"
                android:textAllCaps="true"
                android:background="@drawable/button_background"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>